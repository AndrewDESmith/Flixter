<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Add a new course</h1>
  <%= form_for @course, :url => instructor_courses_path do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
    <br>
    <%= f.submit 'Create', :class => 'btn btn-primary' %>
    <br>
  <% end %>
  <br>
</div>
